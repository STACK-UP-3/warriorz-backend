{
  "name": "warriorz-backend",
  "version": "1.0.0",
  "description": "The back end of the warriorz",
  "main": "server/index.js",
  "nyc": {
    "exclude": [
      "server/swagger/*",
      "server/models",
      "server/routes/*.js",
      "server/services/email.create.js",
      "logger.js",
      "server/config/passport.js",
      "server/helpers/profiler.js",
      "server/controllers/socialOauth.js"
    ]
  },
  "scripts": {
    "test": "set NODE_ENV=test && npm run migration:reset && nyc --reporter=html --reporter=text mocha --require @babel/register ./server/tests/*.test.js --recursive ./server/tests/**/*.test.js --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "start": "npm run migration && npm run migration:seed && babel-node -- server/index.js",
    "start:dev": "npm run migration:reset && nodemon --exec babel-node ./server/index.js",
    "migration": "babel-node node_modules/.bin/sequelize db:migrate",
    "migration:seed": "babel-node node_modules/.bin/sequelize db:seed:all",
    "migration:undo": "babel-node node_modules/.bin/sequelize db:migrate:undo:all",
    "migration:undo-latest": "babel-node node_modules/.bin/sequelize db:migrate:undo",
    "migration:reset": "npm run migration:undo && npm run migration && npm run migration:seed",
    "win:test": "npm run win:devtable && nyc --reporter=html --reporter=text mocha --require @babel/register ./server/tests/*.test.js --recursive ./server/tests/**/*.test.js --exit",
    "win:start:dev": "nodemon --exec babel-node ./server/index.js",
    "win:createTables": "npx sequelize-cli db:migrate",
    "win:drop": "npx sequelize-cli db:migrate:undo:all",
    "win:devtable": "npm run win:drop && npm run win:createTables && npx sequelize-cli db:seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/STACK-UP-3/warriorz-backend.git"
  },
  "author": "Warriorz Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/STACK-UP-3/warriorz-backend/issues"
  },
  "homepage": "https://github.com/STACK-UP-3/warriorz-backend#readme",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-regenerator": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@hapi/joi": "^17.1.1",
    "babel-eslint": "^10.1.0",
    "babel-register": "^6.26.0",
    "bcrypt": "^4.0.1",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.6",
    "nodemon": "^2.0.2",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "path": "^0.12.7",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.5",
    "sequelize-cli": "^5.5.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "chai-http": "4.3.0",
    "babel-install": "^2.1.0",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.0.0"
  }
}
